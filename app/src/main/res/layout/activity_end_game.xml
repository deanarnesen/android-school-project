<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndGameActivity"
    android:background="@drawable/tickettobidebackground">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center_horizontal|center_vertical"
       android:padding="30dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/end_game_box_color"
          android:background="#99a26101"
          android:orientation="vertical"
          android:gravity="center_horizontal|center_vertical"
          android:padding="20dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView
                  android:id="@+id/end_game_winner_looser"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="@string/win"
                  android:gravity="center_vertical|center_horizontal"
                  android:textSize="30dp"
                  android:textColor="#ffd31b"
                  android:textStyle="bold" />
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Play Again"
                  android:textColor="#e8f6ff"
                  android:background="@drawable/mybutton"
                  android:onClick="play_again"/>
              <!--<Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="TEST"
                  android:onClick="dummyshowPLayers"/>-->
          </LinearLayout>
          <TableLayout
              android:id="@+id/end_game_score_table"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/border">
              <TableRow>
                  <TextView
                      android:layout_column="1"
                      android:text="PLAYER"
                      android:layout_weight="1"
                      android:textSize="16dp"
                      android:textStyle="bold"
                      android:textColor="#e8f6ff"
                      android:gravity="center_horizontal"/>
                  <TextView
                      android:text="Dest Points"
                      android:layout_weight="1"
                      android:textSize="16dp"
                      android:textStyle="bold"
                      android:textColor="#e8f6ff"
                      android:gravity="center_horizontal"/>
                  <TextView
                      android:text="Points Lost"
                      android:layout_weight="1"
                      android:textSize="16dp"
                      android:textStyle="bold"
                      android:textColor="#e8f6ff"
                      android:gravity="center_horizontal"/>
                   <TextView
                      android:text="Longest Path"
                      android:layout_weight="1"
                      android:textSize="16dp"
                      android:textStyle="bold"
                      android:textColor="#e8f6ff"
                      android:gravity="center_horizontal"/>
                    <TextView
                      android:text="Total"
                      android:layout_weight="1"
                      android:textSize="16dp"
                      android:textStyle="bold"
                      android:textColor="#e8f6ff"
                      android:gravity="center_horizontal"/>

              </TableRow>

          </TableLayout>

      </LinearLayout>




   </LinearLayout>



</android.support.constraint.ConstraintLayout>